using System;


namespace Product
{
    class Program
    {
        static void Main(string[] args)
        {

            int no, fact = 1;
            Console.WriteLine("Enter any number:");
            no = int.Parse(Console.ReadLine());
            for (int i = 1; i <= no; i++)
            {
                fact = fact * i;
            }
            Console.WriteLine("\n Factorial of a number= " + fact);
            Console.ReadKey();



        }
    }
}
